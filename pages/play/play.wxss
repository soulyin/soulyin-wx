page {
  width: 100%;
  height: 100%;
  position: relative;
}

.bg {
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  filter: blur(20px);
  background-size: 100% 100%;
}

.page-play {
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
}

.song-img {
  position: absolute;
  top: 260rpx;
  left: 122rpx;
  border: 0.5px solid #000;
  width: 500rpx;
  height: 500rpx;
  border-radius: 50%;
}

.songbg-rotate {
  animation: 30s rotate infinite linear;
}

@keyframes rotate {
  from {
    transform: rotateZ(0);
  }

  to {
    transform: rotateZ(360deg);
  }
}

.top-1 {
  width: 100%;
  position: absolute;
  bottom: 266rpx;
  text-align: center;
}

.play-mode, .collection {
  display: inline-block;
  font-size: 40rpx;
  color: #fff;
  margin: 0 10px;
}

.progress-bar {
  position: absolute;
  left: 42rpx;
  bottom: 184rpx;
  width: 666rpx;
  height: 16rpx;
  border-radius: 12rpx;
  background: #d0d0d0;
}

.progress-point {
  width: 20rpx;
  height: 20rpx;
  border-radius: 10rpx;
  position: absolute;
  top: -2rpx;
  left: -10rpx;
  background: #fff;
}

.cur-time, .total-time {
  font-size: 24rpx;
  color: #fff;
  position: absolute;
  top: 18rpx;
}

.total-time {
  right: 0;
}

.op-bar {
  position: absolute;
  bottom: 130rpx;
  text-align: right;
}

.iconfont {
  display: inline-block;
  color: #fff;
}

.icon-play, .icon-stop {
  width: 80rpx;
  height: 80rpx;
  font-size: 80rpx;
  position: absolute;
  left: 360rpx;
}

.icon-pre, .icon-next {
  width: 60rpx;
  height: 60rpx;
  font: 60rpx;
  position: absolute;
  top: 24rpx;
}

.icon-pre {
  left: 210rpx;
}

.icon-next {
  left: 480rpx;
}
